mixin dropdownW320(args, ...items)
    .dropdown.dropdown_w320
        .label.label_pdng #{args.label}
        .dropdown__input-container
            input(type='text' name=args.name placeholder=args.placeholder disabled).dropdown__input
            button.dropdown__expd-more
                i.material-icons expand_more
        .dropdown__menu.label
            ul.dropdown__list
                each item in items
                    li= item 
                        .dropdown__counter
                            div= "-"
                            span.dropdown__count= 0
                            div= "+"
            .dropdown__btns
                button.dropdown__btns-clear.label Очистить
                button.dropdown__btns-accept.label Применить

